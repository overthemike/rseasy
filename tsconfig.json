{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
, "test"  ],
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}